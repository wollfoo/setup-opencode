{
  "$schema": "https://opencode.ai/config.json",
  "model": "github-copilot/claude-sonnet-4.5",
  "small_model": "zai-coding-plan/glm-4.6",
  "instructions": ["./AGENTS.md", "./instructions/*.md", "./agent/*.md"],
  "agent": {
    "deep-thinker": {
      "description": "Solve complex problems with deep reasoning; prioritize correctness, generate and verify hypotheses, and deliver evidence-based conclusions.",
      "model": "github-copilot/gpt-5",
      "reasoningEffort": "high",
      "read_understood": true
    },
    "max-thinking": {
      "description": "Max-thinking for in-depth research: multi-step reasoning with Claude Thinking; synthesize authoritative sources (RFC/docs), state hypotheses, verify with evidence/citations, compare alternatives and trade-offs, analyze risks, conclude with justification, and propose actionable next steps.",
      "model": "github-copilot/claude-sonnet-4.5",
      "thinking": {
        "type": "enabled",
        "budgetTokens": 20000
      },
      "read_understood": true
    },
    "planner-claude-opus": {
      "description": "Strategic planning and architecture with Claude Opus; decompose tasks, map dependencies, estimate effort, and define clear definitions of done.",
      "model": "github-copilot/claude-opus-41",
      "thinking": {
        "type": "enabled",
        "budgetTokens": 20000
      },
      "read_understood": true
    },
    "planner-gemini": {
      "description": "Fast planning with large context (Gemini); produce outlines and action checklists, optimize for cost/time and constraints.",
      "model": "github-copilot/gemini-2.5-pro",
      "thinkingBudget": -1,
      "reasoningEffort": "high",
      "read_understood": true
    },
    "build": {
      "description": "Implement and refactor code safely; follow project standards, write tests, and ensure lint/CI pass.",
      "model": "github-copilot/gpt-5-codex",
      "reasoningEffort": "high",
      "read_understood": true
    }
  },

  "provider": {
    "github-copilot": {
      "models": {
        "gpt-5": { "options": { "reasoningEffort": "high" } },
        "gpt-5-codex": { "options": { "reasoningEffort": "high" } },
        "claude-sonnet-4.5": { "options": { "thinking": { "type": "enabled", "budgetTokens": 20000 } } },
        "claude-opus-41": { "options": { "thinking": { "type": "enabled", "budgetTokens": 20000 } } },
        "gemini-2.5-pro": { "options": { "thinkingBudget": -1, "reasoningEffort": "high" } }
      }
    },
    "google": {
      "models": {
        "gemini-2.5-pro": { "options": { "thinkingBudget": -1, "reasoningEffort": "high" } }
      }
    },
    "zai-coding-plan": {
      "models": {
        "glm-4.6": { "options": { "reasoningEffort": "high" } }
      }
    },
    "huggingface": {
      "models": {
        "moonshotai/Kimi-K2-Instruct-0905": { "options": { "reasoningEffort": "high" } },
        "MiniMaxAI/MiniMax-M2": { "options": { "reasoningEffort": "high" } },
        "Qwen/Qwen3-Coder-480B-A35B-Instruct": { "options": { "reasoningEffort": "high" } },
        "Qwen/Qwen3-235B-A22B-Thinking-2507": { "options": { "thinking": { "type": "enabled", "budgetTokens": 20000 } } }
      }
    }
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    },
    "memory": {
      "type": "local",
      "command": ["npx", "-y", "@modelcontextprotocol/server-memory"],
      "enabled": true,
      "environment": {
        "MEMORY_FILE_PATH": ".windsurf/memory/knowledge.json"
      }
    },
    "sequential-thinking": {
      "type": "local",
      "command": ["npx", "-y", "@modelcontextprotocol/server-sequential-thinking"],
      "enabled": true
    },
    "repomix": {
      "type": "local",
      "command": ["npx", "-y", "repomix", "--mcp"],
      "enabled": true
    },
    "mcp-playwright": {
      "type": "local",
      "command": ["npx", "-y", "@playwright/mcp@latest"],
      "enabled": true
    },
    "chrome-devtools": {
      "type": "local",
      "command": ["npx", "chrome-devtools-mcp@latest"],
      "enabled": true
    }
  }
}
